%h1 Items

%ul
  = @items.each do |i|
    %li
    = link_to i.name, item_path(i)
    = link_to "Редактировать", edit_item_path(i)
    = link_to "Удалить", i, method: :delete, data: { confirm: "Точно хотите удалить?" }
    = i.price
    = i.voteup
    = link_to "+", upvote_item_path(i)

%p= link_to "Создать товар", new_item_path()